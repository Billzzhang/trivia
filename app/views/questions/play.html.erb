<html>
    <head>
        <title>Trivia Game</title>
        <h1>Play</h1>
    </head>
    <body>
        <%@questions.each do |question|%>
            <form>
                <h3><%=question.question%></h3>
                <input type="radio" name="correctanswer"><%=question.correct_answer.name%><br>
                <%question.incorrect_answers.each do |answer| %>
                    <input type="radio" name="wronganswer"><%=answer.answer%><br>
                <%end%>
                <input type="submit">
            </form>
        <%end%>
    </body>
</html>