<h1>These are <%= @questions.count %> questions</h1>
<table>
    <thead>
        <tr>
            <td>Category</td>
            <td>Difficulty</td>
            <td>Question</td>
            <td>Correct Answer</td>
            <td>Incorrect Answers</td>
        </tr>
    </thead>
    <tbody>
        <% @questions.each do |question| %>
        <tr>
            <td><%=Category.find_by_id(question.category_id).name%></td>
            <td><%=Difficulty.find_by_id(question.difficulty_id).name%></td>
            <td><%=question.question%></td>
            <td><%=question.correct_answer.name%></td>
            <% question.incorrect_answers.each do |answer| %>
                <td><%=answer.answer%></td>
            <%end%>
        </tr>
        <% end %>
    </tbody>
</table>